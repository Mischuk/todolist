.select
  position relative
  display block
  margin-left auto
  width 136px
  background $primary_color
  cursor pointer
  &:hover
    select
      background $primary_color - 25%
      > option
        background $primary_color
  &:after
    content "â–¼"
    position absolute
    top 0
    right 0
    bottom 0
    font-size 60%
    line-height 40px
    padding 0 7px
    background none
    color white
    pointer-events none
    border-radius 0 6px 6px 0
  select
    anim()
    cursor pointer
    display block
    width 100%
    border none
    background $primary_color
    padding 0 10px
    margin 0
    height 40px
    outline none
    line-height 1.2
    -webkit-appearance none
    border-radius 0
    color #fff
    font-weight bold
    font-size 14px
    @media screen and (-webkit-min-device-pixel-ratio:0)
      padding-right 30px
    &:focus > option:checked
      background $primary_color - 25%
    option
      font-size 14px
      font-weight bold
      line-height 1.5
      cursor pointer
      max-width 136px
  &_form
    background #fff
    &:hover
      select
        box-shadow inset 0 0 0 2px $primary_color - 25%
        background #fff
        > option
          background #fff
    &:after
      color $primary_color
    select
      background #fff
      color #000
      &:focus > option:checked
        background #fff


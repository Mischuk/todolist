.checkbox
  display inline-block
  vertical-align middle
  height 40px
  line-height 40px
  cursor pointer
  sn()
  &:hover
    span
      color $primary_color - 25%
  &__input
    opacity 0
    position absolute
    left -9999px
    &:checked + span
      background $primary_color
      box-shadow inset 0 0 0 3px #f7f1f1
  &__icon
    border 2px solid $primary_color
    width 20px
    height 20px
    display inline-block
    vertical-align middle
  &__text
    anim()
    display inline-block
    vertical-align middle
    padding-left 5px
    font-weight bold
    font-size 14px
    color $primary_color

/* TRANSITION */
/* div { anim(opacity, transform, color) } */
$animation_type = ease;

anim(a = null, b = null, c = null, d = null)
  if ( a != null ) && (b != null) && (c != null) && (d != null)
    transition a 300ms $animation_type, b 300ms $animation_type, c 300ms $animation_type, d 300ms $animation_type
  else if ( a != null ) && (b != null) && (c != null)
    transition a 300ms $animation_type, b 300ms $animation_type, c 300ms $animation_type
  else if ( a != null ) && (b != null)
    transition a 300ms $animation_type, b 300ms $animation_type
  else if ( a != null )
    transition a 300ms $animation_type
  else
    transition all 300ms $animation_type



/* BASE MIXINS */
clearfix()
  &:before
  &:after
    content ''
    display table
    clear both
sn()
  -webkit-touch-callout none
  -khtml-user-select none
  user-select none